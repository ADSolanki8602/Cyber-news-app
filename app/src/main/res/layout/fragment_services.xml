<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ServicesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

  <androidx.cardview.widget.CardView
      android:id="@+id/cyDefanseCard"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      app:cardCornerRadius="15dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/cyDefIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cyber_defanse"
                 android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cyDefIcon"
                android:layout_alignBottom="@+id/cyDefIcon"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_toEndOf="@+id/cyDefIcon"
                android:textColor="#DC6070"
                android:text="Cyber Defanse"
                android:textSize="20sp" />

        </RelativeLayout>
  </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cyResponseCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
      app:cardCornerRadius="15dp"
             android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cyRspIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cyber_response"
                     android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cyRspIcon"
                    android:layout_alignBottom="@+id/cyRspIcon"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="18dp"
                    android:textColor="#8294F6"
                    android:layout_marginBottom="18dp"
                    android:layout_toEndOf="@+id/cyRspIcon"
                    android:text="Cyber Response"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cyTransfomationCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
      app:cardCornerRadius="15dp"
             android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cyTrasIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cyber_transform"
                     android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cyTrasIcon"
                    android:layout_alignBottom="@+id/cyTrasIcon"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_toEndOf="@+id/cyTrasIcon"
                    android:textColor="#236FA0"
                    android:text="Cyber Transformation"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cyStratagyCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
      app:cardCornerRadius="15dp"
             android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cyStraIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cyber_stratagy"
                     android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignTop="@+id/cyStraIcon"
                    android:layout_alignBottom="@+id/cyStraIcon"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_toEndOf="@+id/cyStraIcon"
                    android:text="Cyber Stratagy &amp; Governance"
                    android:textColor="#EB5E50"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cyTrainingCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
      app:cardCornerRadius="15dp"
             android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cyTrainIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cyber_training"
                     android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginBottom="1dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cyTrainIcon"
                    android:layout_alignBottom="@+id/cyTrainIcon"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="18dp"
                    android:textColor="#F7DC8B"
                    android:layout_marginBottom="18dp"
                    android:layout_toEndOf="@+id/cyTrainIcon"
                    android:text="Cyber Training"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>